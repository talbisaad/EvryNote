<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>EvryNote</display-name>

	<listener>
		<listener-class>Config.InitialisationDaoFactory</listener-class>
	</listener>

	<servlet>
		<servlet-name>ServletFiliere</servlet-name>
		<servlet-class>Controller.ServletFiliere</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ServletFiliere</servlet-name>
		<url-pattern>/CreerFil</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ServletClass</servlet-name>
		<servlet-class>Controller.ServletClass</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ServletClass</servlet-name>
		<url-pattern>/CreerClass</url-pattern>
	</servlet-mapping>
	
	
	<servlet-mapping>
		<servlet-name>ServletClass</servlet-name>
		<url-pattern>/ListClass</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>ServletClass</servlet-name>
		<url-pattern>/ModifierClass</url-pattern>
	</servlet-mapping>



	<servlet-mapping>
		<servlet-name>ServletFiliere</servlet-name>
		<url-pattern>/ListFil</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ServletFiliere</servlet-name>
		<url-pattern>/GestionFil</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>